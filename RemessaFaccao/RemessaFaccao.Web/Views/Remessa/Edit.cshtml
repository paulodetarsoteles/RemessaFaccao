@model RemessaFaccao.DAL.Models.Remessa

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Remessa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="internal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FaccaoId" class="control-label"></label>
                    @Html.DropDownList("FaccaoId", (SelectList)ViewBag.Faccoes, "Selecione uma facção", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label asp-for="StatusRemessa" class="control-label"></label>
                    <select asp-for="StatusRemessa" asp-items="@Html.GetEnumSelectList<RemessaFaccao.DAL.Models.Enums.StatusRemessa>()"  class = "form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Referencia" class="control-label"></label>
                    <input asp-for="Referencia" class="form-control" />
                    <span asp-validation-for="Referencia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValorUnitario" class="control-label"></label>
                    <input asp-for="ValorUnitario" type="text" class="form-control" />
                    <span asp-validation-for="ValorUnitario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataDeEntrega" class="control-label"></label>
                    <input asp-for="DataDeEntrega" class="form-control" />
                    <span asp-validation-for="DataDeEntrega" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataPrazo" class="control-label"></label>
                    <input asp-for="DataPrazo" class="form-control" />
                    <span asp-validation-for="DataPrazo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataRecebimento" class="control-label"></label>
                    <input asp-for="DataRecebimento" class="form-control" />
                    <span asp-validation-for="DataRecebimento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Observacoes" class="control-label"></label>
                    <input asp-for="Observacoes" class="form-control" />
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @*Validação do valor com uso da vírgula no campo*@
    <script>
        jQuery.extend(jQuery.validator.methods, {
            number: function (value, element) {
                return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)(?:,\d+)?$/.test(value);
            }
        });
    </script>
}
