@model IEnumerable<RemessaFaccao.DAL.Models.ViewModels.RemessaFaccaoViewModel>

@{
    ViewData["Title"] = "Relatório de Remessas que Chegarão da Produção";
}

<h1>Remessas com Previsão de Chegada Hoje da Produção</h1>

@if (Model.Count() < 1)
{
    <div class="col-md-8">
        <table class="table">
            <tr>
                <th>
                    Nenhum resultado encontrado...
                </th>
            </tr>
        </table>
    </div>
}
else
{
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        &nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayNameFor(model => model.RemessaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Referencia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            &nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(modelItem => item.RemessaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Referencia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}